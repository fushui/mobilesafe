<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        style="@style/TitleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="手机防盗界面" />

    <View
        style="@style/view_line"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp" >

        <TextView
            style="@style/ContentText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机安全号码为：  " />

        <TextView
            android:id="@+id/id_tv_saveNum"
            style="@style/ContentText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123456 " />
    </LinearLayout>

    <include layout="@layout/line" />

    <TextView
        style="@style/ContentText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="防盗保护设置：  " />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp" >

        <CheckBox
            android:id="@+id/id_ck_is_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:onClick="open" />

        <TextView
            android:id="@+id/id_tv_id_tv_is_open"
            style="@style/ContentText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="防盗保护设置已开启 " />
    </LinearLayout>

    <include layout="@layout/line" />

    <Button
        style="@style/ContentText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:onClick="reset"
        android:text="重新进入设置向导 " />

    <include layout="@layout/line" />

    <TextView
        style="@style/ContentText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="#*location*#获取手机的位置\n
#*delete*#手机设置为出厂模式\n
#*lockscreen*#给手机加密 锁定屏幕\n
#*alarm*#发出报警音乐" />

</LinearLayout>